





{{#each users}}



{{#each ../pedidos}}


{{#if_equal ../id user }}


    <form action="/ver_loc" method="GET">
<div class="row">
    <div class="col-xs-12 col-md-offset-2">




      <div class="panel panel-default">
        <div class="panel-body">
          <ul class="list-group">
               

           <table border="1px" cellpadding="5px" width="100%"  class="table-light" >
  <h1>Cliente: {{../name}}</h1>
             <thead>
                  <tr>
                <th colspan="9" class="text-center">Estado del pedido: {{this.estado}} </th>
              </tr>
              <tr>
                <th colspan="9" class="text-center">Forma de pago: {{pago}} </th>
              </tr>
         <tr>
        <th>Nombre del artículo</th>
        <th class="text-center">Precio del artículo</th>
        <th class="text-center">Cantidad del artículo </th>
        
        </tr>
    </thead>
            
            {{#each cart.items}}
            <tbody>
              <tr>

                <td  > {{this.item.nombre_producto}} </td>
                <td  class="text-center"> <span class="badge">
                  {{this.item.precio}}
              </span></td>
              <td  class="text-center">{{this.cantidad}}</td>


              </tr>
              
            </tbody>

                {{/each}}

          </ul>
        </div>
        <th colspan="1"><strong> Precio Total : RD${{this.cart.precioTotal}} </strong></th>
        
     <hr>
      </div>
      <div class="panel-footer">Estado del pedido: {{this.estado}} </div>
     

    </div>
        
  </div>
  </form>
{{/if_equal}}

{{/each}}
{{/each}}