

<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1 class="h4">
          Reseteando contraseña
        </h1>
      </div>
      
      <div class="card-body">
        <form action="/users/resetpw/{{token}}" method="POST" autocomplete="off">
            <div class="form-group">
                <label for="password">Nueva Contraseña</label>
            </div>
            
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Nueva Contraseña" autofocus>
            </div>

            <div class="form-group">
              <label for="confirm">Confirmación de contraseña</label>
            </div>
            
            <div class="form-group">
                <input type="password" class="form-control" name="confirm" placeholder="Confirmación de contraseña">
            </div>

            <button class="btn btn-primary btn-block">
                Restaurar
            </button>
        </form>

    
  
      </div>
    </div>
  </div>
</div>
