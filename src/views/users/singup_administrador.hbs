<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Registro de cuenta
      </div>
      <div class="card-body">
        <form action="/users/singup_administrador" method="POST" autocomplete="off" > 
        
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
          </div>

          <div class="form-group">
            <input type="text" class="form-control" name="apellido" placeholder="Apellido" value="{{apellido}}">
          </div>

          <div class="form-group">
            <input type="text" class="form-control" name="celular" placeholder="Número celular" value="{{celular}}">
          </div>

          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
          </div>

          <div class="form-group">
            
            <select class="form-control selectpicker" type="text" name="jerarquia" >
                <option value="{{jerarquia}}">
                    <option>Administrador</option>
                    <option>Mensajero</option>
                </option>

            </select>
          </div>

           <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Contraseña" value="{{password}}">
          </div>

          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirmación de Contraseña"
              value="{{confirm_password}}">
          </div>

          <button class="btn btn-primary btn-block">
            Regístrarse
          </button>
        </form>
      </div>
    </div>
  </div>
</div>