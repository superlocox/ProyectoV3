
<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1 class="h4">
          Contactanos
        </h1>
      </div>
       
      <div class="card-body">
        <form class="form-group" action="/contact" method="POST" autocomplete="off">

        
               
                <div class="form-group"> 
                    <label>Correo</label>
                        <input name="email" type="email" class="form-control" required />
                    
                </div>
                <div class="form-group">
                    <label>Mensaje</label>
                        <textarea name="message" cols="30" rows="10" class="form-control" style="resize: none;" required ></textarea>
                    
                </div>
                <div>
                    <input type="submit" class="btn btn-primary">
                </div>
            </form>
  
      </div>
    </div>
  </div>
</div>



